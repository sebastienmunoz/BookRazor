@page

@model BooksModel
@{
    ViewData["Title"] = "Books";
}
<h2>Books</h2>
<p>
    <a asp-page="CreateBook">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.books[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.books[0].Isbn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.books[0].PublisherName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.books[0].AuthorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.books[0].CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.books)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Isbn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PublisherName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AuthorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    <a asp-page="./EditEmployee" asp-route-id="@item.BookId">Edit</a> |
                    <a asp-page="./EmployeeDetails" asp-route-id="@item.BookId">Details</a> |
                    <a asp-page="./DeleteEmployee" asp-route-id="@item.BookId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>